-- 7. Определите mod и gcd.

\func mod (x y : Nat) : Nat => go 0 x y
  \where
    \func go (z x y : Nat) : Nat \elim x
      | 0 => z
      | suc x' => go (\case suc z \with {
          | y => 0
          | _ => suc z
        }) x' y

